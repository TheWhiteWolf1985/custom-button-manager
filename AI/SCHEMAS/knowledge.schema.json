{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/knowledge.schema.json",
  "title": "Knowledge",
  "type": "object",
  "required": ["meta", "entities", "relations", "changes_log"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["project", "ai_kit_version", "updated_at"],
      "properties": {
        "project": { "type": "string" },
        "ai_kit_version": { "type": "string" },
        "updated_at": { "type": "string" }
      },
      "additionalProperties": true
    },
    "commands": {
      "type": "object",
      "additionalProperties": true
    },
    "entities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "name": { "type": "string" },
          "path": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "relations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "type", "to"],
        "properties": {
          "from": { "type": "string" },
          "type": { "type": "string" },
          "to": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "changes_log": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["step_id", "summary", "files"],
        "properties": {
          "step_id": { "type": "string" },
          "summary": { "type": "string" },
          "commit": { "type": "string" },
          "files": {
            "type": "array",
            "items": { "type": "string" }
          },
          "commands": {
            "type": "array",
            "items": { "type": "string" }
          },
          "notes": { "type": "string" },
          "risks": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
